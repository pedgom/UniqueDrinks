@model UniqueDrinks.Models.Imagens

@{
    ViewData["Title"] = "Adicionar Imagens";
}

<h1>Adicionar imagem de uma bebida</h1>

<h4>Imagens</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" name="fotoBebida" accept=".jpg,.jpeg,.png" style="color:blue;" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BebidaFK" class="control-label"></label>
                <select asp-for="BebidaFK" class="form-control" asp-items="ViewBag.BebidaFK">
                    <option value="0">Escolha uma Bebida, por favor.</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
